{
  "name": "Statusfy",
  "version": "0.0.1",
  "description": "A painless open source Status Page System",
  "author": "Julio Marquez",
  "private": true,
  "scripts": {
    "dev": "npx cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "npx nuxt build",
    "start": "npx cross-env NODE_ENV=production node server/index.js",
    "generate": "npx nuxt generate",
    "lint": "npx eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:css": "stylelint 'client/**/*.{css,vue}'",
    "precommit": "npm run lint && npm run lint:css"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.0.0",
    "express": "^4.15.3",
    "nuxt-edge": "latest",
    "nuxt-i18n": "^4.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "babel-eslint": "^8.2.1",
    "cross-env": "^5.0.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.0.4",
    "eslint": "^5.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-vue": "^4.0.0",
    "nodemon": "^1.11.0",
    "postcss-combine-duplicated-selectors": "^6.0.1",
    "postcss-import": "^11.1.0",
    "postcss-preset-env": "^5.3.0",
    "stylelint": "^9.4.0",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-recess-order": "^2.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "tailwindcss": "^0.6.1"
  },
  "engines": {
    "node": "8.x",
    "npm": "5.x"
  }
}
